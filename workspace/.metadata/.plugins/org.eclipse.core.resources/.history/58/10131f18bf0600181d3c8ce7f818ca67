package project2;

public class Trig {
	public Trig(){
		//distance between two points.
	}

	public Trig(Point _pt1, Point _pt2){
		pt1 = _pt1;
		pt2 = _pt2;

		EucDist();
	}

	public double EucDist()
	{
		double xDist = (pt1.x - pt2.x) * (pt1.x - pt2.x);
		double yDist = (pt1.y - pt2.y) * (pt1.y - pt2.y);
		EuDistance = Math.sqrt(xDist + yDist);
		return EuDistance;
	}
	
	
	double EuDistance;
	Point pt1;
	Point pt2;
	Point mid;

}
